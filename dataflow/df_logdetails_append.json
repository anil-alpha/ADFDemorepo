{
	"name": "df_logdetails_append",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DelimitedText2",
						"type": "DatasetReference"
					},
					"name": "dummy"
				},
				{
					"dataset": {
						"referenceName": "logappend",
						"type": "DatasetReference"
					},
					"name": "log"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "dflogsink",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "derivedColumn1"
				},
				{
					"name": "select1"
				},
				{
					"name": "union1"
				}
			],
			"scriptLines": [
				"parameters{",
				"     ADFName as string,",
				"     PipelineName as string,",
				"     Status as string,",
				"     RunID as string,",
				"     TriggerName as string,",
				"     LogFileName as string",
				"}",
				"source(output(",
				"          dummy as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> dummy",
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     wildcardPaths:[('log' + $LogFileName)]) ~> log",
				"dummy derive(AFDName = $ADFName,",
				"          PipelineName = $PipelineName,",
				"          RunID = $RunID,",
				"          TriggerName = $TriggerName,",
				"          Status = $Status) ~> derivedColumn1",
				"derivedColumn1 select(mapColumn(",
				"          AFDName,",
				"          PipelineName,",
				"          RunID,",
				"          TriggerName,",
				"          Status",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"select1, log union(byName: true)~> union1",
				"union1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sink1"
			]
		}
	}
}